{% extends "base.html.twig" %}

{% block body %}
    <section class="flex flex-col gap-8">
        <header>
            <h1 class="text-3xl">Threads du forum</h1>
        </header>

        <div class="flex flex-col gap-4">
            {% for thread in threads %}
                <article class="p-2 border rounded-md cursor-pointer hover:bg-slate-100">
                    <h2 class="text-base font-bold">
                        <a href="{{ path("thread_show", { threadId: thread.id }) }}">{{ thread.title }}</a>
                    </h2>
                    <div class="text-xs text-neutral-600">
                        <span>par {{ thread.userFullName }}</span> |  <span>le {{ thread.createdAt }}</span>
                    </div>
                    <div class="text-xs text-neutral-600">
                        <span>{{ thread.nbPosts }} posts</span> | <span>dernier le {{ thread.latestPostAt }}</span>
                    </div>
                </article>
            {% else %}
                <h2 class="text-base">Aucun thread Ã  afficher</h2>
            {% endfor %}
        </div>
    </section>
{% endblock %}



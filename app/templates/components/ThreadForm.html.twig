<form {{ attributes }} class="bg-white rounded-lg p-6 w-1/3 flex flex-col gap-4">
    <h2 class="text-xl font-semibold">{{ "thread_form.create_title" | trans(domain="threads") }}</h2>

    <div class="flex-1">
        <div class="mb-4">
            <label for="title">{{ "thread_form.inputs.labels.title" | trans(domain="threads") }}</label>
            <input type="text" id="title" data-model="on(change)|thread.title" />
        </div>

        <div>
            <label for="content">{{ "thread_form.inputs.labels.content" | trans(domain="threads") }}</label>
            <textarea rows="6" id="content" data-model="on(change)|thread.content"></textarea>
        </div>
    </div>

    <div class="flex justify-end gap-1">
        <button class="btn danger" type="button" data-action="form-modal#closeModal">
            {{ "actions.cancel" | trans(domain="general") }}
        </button>
        <button class="btn primary"
                type="button"
                data-action="live#action"
                data-live-action-param="saveThread"
        >
            {{ "actions.save" | trans(domain="general") }}
        </button>
    </div>
</form>

